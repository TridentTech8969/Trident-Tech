                function validateForm() {
            let isValid = true;

            // Clear previous validation
            $('.form-group input, .form-group select, .form-group textarea').removeClass('is-invalid');
            $('.invalid-feedback').remove();

            // Validate Name
            const name = $('#name').val().trim();
            if (!name) {
                $('#name').addClass('is-invalid');
                $('#name').after('<div class="invalid-feedback">Name is required</div>');
                isValid = false;
            }

            // Validate Email
            const email = $('#email').val().trim();
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!email) {
                $('#email').addClass('is-invalid');
                $('#email').after('<div class="invalid-feedback">Email is required</div>');
                isValid = false;
            } else if (!emailRegex.test(email)) {
                $('#email').addClass('is-invalid');
                $('#email').after('<div class="invalid-feedback">Invalid email address</div>');
                isValid = false;
            }

            // Validate Project Type
            const projectType = $('#projectType').val();
            if (!projectType) {
                $('#projectType').addClass('is-invalid');
                $('#projectType').after('<div class="invalid-feedback">Please select a project type</div>');
                isValid = false;
            }

            // Validate Message
            const message = $('#message').val().trim();
            if (!message) {
                $('#message').addClass('is-invalid');
                $('#message').after('<div class="invalid-feedback">Message is required</div>');
                isValid = false;
            }

            return isValid;
        }

        function sendContactEmail() {
            // Validate form before submission
            if (!validateForm()) {
                const firstInvalidField = $('.is-invalid').first();
                if (firstInvalidField.length) {
                    $('html, body').animate({
                        scrollTop: firstInvalidField.offset().top - 100
                    }, 500);
                    firstInvalidField.focus();
                }
                return;
            }

            var btn = $('#submitBtn');

            // Prevent double submission
            if (btn.prop('disabled')) return;

            // Set loading state
            btn.prop('disabled', true);
            btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Sending...');

            // Hide previous messages
            $('#responseMessage').hide().removeClass('success error');

            // Prepare contact data object
            var model = {
                Name: $('#name').val().trim(),
                Email: $('#email').val().trim(),
                Phone: $('#phone').val().trim(),
                ProjectType: $('#projectType').val(),
                Message: $('#message').val().trim()
            };
            // AJAX call using jQuery
            $.ajax({
                url: '/Home/SubmitContact',
                type: 'POST',
                data: model,
                success: function(response) {
                    // Reset button
                    btn.prop('disabled', false);
                    btn.html('<span>Send Message</span><i class="fas fa-paper-plane"></i>');

                    if (response.success) {
                        // Show success message
                        $('#responseMessage')
                            .addClass('success')
                            .text(response.message || 'Message sent successfully! We will get back to you soon.')
                            .fadeIn();

                        // Clear form
                        $('#name, #email, #phone, #projectType, #message').val('');

                        // Scroll to success message
                        $('html, body').animate({
                            scrollTop: $('#responseMessage').offset().top - 100
                        }, 500);
                    } else {
                        // Show error message
                        let errorMsg = response.message || 'Failed to send message. Please try again.';

                        // Display server-side validation errors if available
                        if (response.errors) {
                            Object.keys(response.errors).forEach(function(key) {
                                const fieldName = key.toLowerCase();
                                const field = $('#' + fieldName);
                                if (field.length) {
                                    field.addClass('is-invalid');
                                    field.after('<div class="invalid-feedback">' + response.errors[key][0] + '</div>');
                                }
                            });
                            errorMsg = 'Please correct the errors and try again.';
                        }

                        $('#responseMessage')
                            .addClass('error')
                            .text(errorMsg)
                            .fadeIn();
                    }
                },
                error: function(xhr, status, error) {
                    // Reset button
                    btn.prop('disabled', false);
                    btn.html('<span>Send Message</span><i class="fas fa-paper-plane"></i>');

                    let errorMessage = 'Error sending message. Please try again.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    } else if (xhr.responseText) {
                        try {
                            const response = JSON.parse(xhr.responseText);
                            errorMessage = response.message || errorMessage;
                        } catch (e) {
                            errorMessage = 'Network error. Please check your connection and try again.';
                        }
                    }

                    $('#responseMessage')
                        .addClass('error')
                        .text(errorMessage)
                        .fadeIn();
                }
            });
        }
