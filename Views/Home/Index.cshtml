                    });

                    // Mobile Menu
                    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
                    const navLinksMenu = document.querySelector('.nav-links');

                    if (mobileMenuToggle) {
                        mobileMenuToggle.addEventListener('click', function() {
                            this.classList.toggle('active');
                            navLinksMenu.classList.toggle('active');
                            document.body.style.overflow = navLinksMenu.classList.contains('active') ? 'hidden' : '';
                        });
                    }

                    // Service Accordions
                    const accordionToggles = document.querySelectorAll('.accordion-toggle');
                    accordionToggles.forEach(toggle => {
                        toggle.addEventListener('click', function(e) {
                            e.stopPropagation();
                            const serviceCard = this.closest('.service-card');
                            const content = serviceCard.querySelector('.accordion-content');
                            const icon = this.querySelector('i');

                            accordionToggles.forEach(otherToggle => {
                                if (otherToggle !== toggle) {
                                    const otherCard = otherToggle.closest('.service-card');
                                    const otherContent = otherCard.querySelector('.accordion-content');
                                    const otherIcon = otherToggle.querySelector('i');
                                    otherContent.classList.remove('active');
                                    otherIcon.classList.remove('fa-minus');
                                    otherIcon.classList.add('fa-plus');
                                }
                            });

                            content.classList.toggle('active');
                            if (content.classList.contains('active')) {
                                icon.classList.remove('fa-plus');
                                icon.classList.add('fa-minus');
                            } else {
                                icon.classList.remove('fa-minus');
                                icon.classList.add('fa-plus');
                            }
                        });
                    });

                    // Contact Form
                    const contactForm = document.getElementById('contactForm');
                    if (contactForm) {
                        contactForm.addEventListener('submit', function(e) {
                            e.preventDefault();

                            const successMessage = document.getElementById('successMessage');
                            successMessage.classList.add('show');
                            contactForm.reset();

                            setTimeout(() => {
                                successMessage.classList.remove('show');
                            }, 5000);
                        });
                    }

                    // Keyboard Navigation
                    document.addEventListener('keydown', function(e) {
                        if (e.key === 'Escape') {
                            const modal = document.getElementById('projectModal');
                            if (modal && modal.classList.contains('active')) {
                                closeProjectModal();
                            }
                            if (navLinksMenu && navLinksMenu.classList.contains('active')) {
                                navLinksMenu.classList.remove('active');
                                mobileMenuToggle.classList.remove('active');
                                document.body.style.overflow = '';
                            }
                        }
                    });
                });

                // Portfolio Modal
                const projectData = {
                    1: {
                        title: 'Aniket Sales Agency',
                        category: 'Industrial Equipment Supply',
                        client: 'Aniket Sales Agency',
                        duration: '2 months',
                        technologies: 'ASP.NET Core MVC, HTML, CSS, JavaScript',
                        problem: 'Aniket Sales needed a professional B2B platform to showcase their extensive industrial tools and equipment catalog with advanced filtering and responsive design for mobile customers.',
                        solution: 'We developed a comprehensive industrial equipment website with product categorization, advanced filtering system, responsive navigation, and professional business aesthetics suitable for B2B clients.',
                        results: ['Professional B2B presence established', 'Advanced product filtering system', 'Fully responsive mobile design', 'Enhanced customer engagement'],
                        link: 'https://aniketsales.com/'
                    },
                    2: {
                        title: 'Strength Studio',
                        category: 'Fitness & Gym Platform',
                        client: 'Strength Studio Gym',
                        duration: '1.5 months',
                        technologies: 'ASP.NET Core MVC, HTML, CSS, JavaScript',
                        problem: 'Strength Studio required a modern, dark-themed website to showcase their gym facilities, membership plans, and class schedules with mobile-optimized layouts for on-the-go access.',
                        solution: 'We created a sleek fitness platform with dark theme and orange accents, featuring membership information, class schedules, trainer profiles, and mobile-first responsive design.',
                        results: ['Modern dark theme UI', 'Mobile-optimized layouts', 'Professional fitness branding', 'Improved member engagement'],
                        link: 'https://strengthstudio.bsite.net/'
                    },
                    3: {
                        title: 'Surekh Graphics',
                        category: 'Graphic Design Services',
                        client: 'Surekh Graphics',
                        duration: '1 month',
                        technologies: 'ASP.NET Core MVC, HTML, CSS, JavaScript',
                        problem: 'Surekh Graphics needed an elegant platform to showcase their graphic design services and portfolio with professional product filtering and a clean, business-appropriate aesthetic.',
                        solution: 'We built a sophisticated design services website with portfolio showcase, service listings, professional product filtering, and a clean interface that highlights their creative work.',
                        results: ['Professional design portfolio', 'Product filtering functionality', 'Clean business aesthetic', 'Enhanced service visibility'],
                        link: 'http://surekhgraphics.com'
                    }
                };

                function openProjectModal(projectId) {
                    const modal = document.getElementById('projectModal');
                    const modalBody = document.getElementById('modalBody');
                    const project = projectData[projectId];

                    if (!project) return;

                    const resultsHTML = project.results.map(result => `<li><i class="fas fa-check-circle"></i>${result}</li>`).join('');

                    modalBody.innerHTML = `
                        <div class="project-detail">
                            <h2>${project.title}</h2>
                            <div class="project-meta">
                                <span class="meta-item"><i class="fas fa-tag"></i>${project.category}</span>
                                <span class="meta-item"><i class="fas fa-user"></i>${project.client}</span>
                                <span class="meta-item"><i class="fas fa-clock"></i>${project.duration}</span>
                            </div>
                            <div class="project-section">
                                <h3>Technologies Used</h3>
                                <p>${project.technologies}</p>
                            </div>
                            <div class="project-section">
                                <h3>The Challenge</h3>
                                <p>${project.problem}</p>
                            </div>
                            <div class="project-section">
                                <h3>Our Solution</h3>
                                <p>${project.solution}</p>
                            </div>
                            <div class="project-section">
                                <h3>Results & Impact</h3>
                                <ul>${resultsHTML}</ul>
                            </div>
                            ${project.link ? `<div class="project-section"><a href="${project.link}" target="_blank" class="btn btn-primary" style="display: inline-flex;"><span>Visit Website</span><i class="fas fa-external-link-alt"></i></a></div>` : ''}
                        </div>
                    `;

                    modal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }

                function closeProjectModal() {
                    const modal = document.getElementById('projectModal');
                    modal.classList.remove('active');
                    document.body.style.overflow = '';
                }

                document.addEventListener('click', function(e) {
                    const modal = document.getElementById('projectModal');
                    if (e.target === modal) closeProjectModal();
                });
    </script>
</body>
